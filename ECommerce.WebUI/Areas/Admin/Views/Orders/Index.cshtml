@model IEnumerable<Order>

@{
    ViewData["Title"] = "Orders";
}



<p>
    <a asp-action="Create" class="btn btn-outline-primary">
        <i class="fa-solid fa-plus"></i> Create New
    </a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice) ₺
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser.Name)
                @Html.DisplayFor(modelItem => item.AppUser.Surname)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                    <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square"></i>Edit</a> |
                    <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i>Details</a> |
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
